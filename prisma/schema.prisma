generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    
}

model Product {
    // Usiamo l'alias di Prisma `uuid()` che è più leggibile
    id String @id @default(uuid()) @db.Uuid 
    
    name String 
    slug String @unique(map: "product_slug_idx")
    category String
    images String[]
    brand String
    description String
    stock Int
    
    // Tipi Decimal per prezzo e rating sono ottimi per la precisione
    price Decimal @default(0) @db.Decimal(12,2) 
    rating Decimal @default(0) @db.Decimal(3,2) 
    
    numReviews Int @default(0)
    isFeatured Boolean @default(false)
    banner String?
    
    // Tipi DateTime corretti per i timestamp
    createdAt DateTime @default(now()) @db.Timestamp(6)
}